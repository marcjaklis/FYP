<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fypgymapp.Login"
    android:background="@drawable/bg"
    >


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="53dp"
        android:layout_centerHorizontal="true"  />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Adress"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="256dp"
        android:layout_height="37dp"
        android:background="@color/verylightgrey"
        android:ems="12"
        android:inputType="textEmailAddress"
        android:textColor="@color/greymiddle"
        tools:layout_editor_absoluteY="88dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/wrongEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="90dp"
        android:layout_marginTop="190dp"
        android:text="Wrong Email"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/wrongPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="90dp"
        android:layout_marginTop="190dp"
        android:text="Wrong Password"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="60dp"
        android:layout_marginTop="113dp"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/centerDescription"
        android:layout_width="256dp"
        android:layout_height="37dp"
        android:background="@color/verylightgrey"
        android:ems="12"
        android:inputType="textPassword"
        android:textColor="@color/greymiddle"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="142dp"
        android:layout_marginTop="230dp"
        android:text="Submit" />













</RelativeLayout>